<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- text style -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_standard</item>
    </style>

    <style name="TextValue.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_standard</item>
    </style>

    <style name="Titletext">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Titletext.Screen_White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Titletext.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_regular</item>
    </style>

    <style name="Titletext.Row">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <style name="TextValue.Row">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#414141</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextValue.Qty">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
